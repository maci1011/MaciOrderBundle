
{% if order and order.items|length %}


{% for item in order.items %}

<div class="row">

	<div class="col-xs-4">

	<a href="{{ path('maci_product_show', { 'id': item.product.id }) }}">
		{{ item.product }}
	</a>

	</div>

	<div class="col-xs-4">
		<p>
			{{ item.quantity }}
		</p>
	</div>

	<div class="col-xs-4">
		<p>
			{{ item.product.price }} &euro;
		</p>
	</div>

</div>

{% endfor %} {# items #}


{% else %}

<div class="row">
	<h3 class="noitems">No Items.</h3>
</div>

{% endif %} {# order #}
