
<header class="row">

	<div class="col-xs-1">
		<span>Id</span>
	</div>

	<div class="col-xs-2">
		<span>Name</span>
	</div>

	<div class="col-xs-2">
		<span>User</span>
	</div>

	<div class="col-xs-1">
		<span>Invoice</span>
	</div>

	<div class="col-xs-1">
		<span>Status</span>
	</div>

	<div class="col-xs-1">
		<span>Amount</span>
	</div>

	<div class="col-xs-4">
		<span>Actions</span>
	</div>

</header>

{% for item in list %}

<div class="row">

	<div class="col-xs-1">
		<span>{{ item.id }}</span>
	</div>

	<div class="col-xs-2">
		<a href="{{ path('maci_order_admin_show_order', {'id': item.id}) }}">{{ item.name }}</a>
	</div>

	<div class="col-xs-2">
		<span>{{ item.user }}</span>
	</div>

	<div class="col-xs-1">
		<span>{{ item.invoice|date('d/m/Y') }}</span>
	</div>

	<div class="col-xs-1">
		<span>{{ item.status }}</span>
	</div>

	<div class="col-xs-1">
		<span>{{ item.amount }} EUR</span>
	</div>

	<div class="col-xs-4">
		<a href="{{ path('maci_order_admin_show_order', {'id': item.id}) }}" class="btn btn-default">Show</a>
		<a href="{{ path('maci_admin_entity_remove', {'entity': 'order', 'id': item.id, 'redirect': 'maci_order_admin_confirmed'}) }}" class="btn btn-danger">Remove</a>
	</div>

</div>

{% else %}

<div class="row">
	<h3 class="noitems">No Items.</h3>
</div>

{% endfor %}

